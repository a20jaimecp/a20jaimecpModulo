<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_restaurant_burguer_form" model="ir.ui.view">
        <field name="name">restaurant.burguer.form</field>
        <field name="model">restaurant.burguer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                    <group>
                        <group>
                            <field name="description"/>
                        </group>
                        <group>
                            <field name="meet"/>
                            <field name="sauces"/>
                            <field name="price"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_restaurant_burguer_kanban" model="ir.ui.view">
        <field name="name">restaurant.burguer.kanban</field>
        <field name="model">restaurant.burguer</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="name"/>
                <field name="description"/>
                <field name="price"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <ul>
                                    <li>
                                        <field name="name"/>
                                        <field name="price"/>
                                    </li>
                                    <li>
                                        <field name="description"/>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

